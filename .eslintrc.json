{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"globals": {
		"webix": true,
		"APPNAME": true,
		"VERSION": true,
		"PRODUCTION": true,
		"$$": true
	},
	"extends": "./node_modules/eslint-config-xbsoftware/1__double_quotes_and_tabs.js",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": "latest"
	},
	"rules": {
		"no-extra-parens": "warn",
		"valid-jsdoc": "warn",
		"no-useless-escape": "off"
	},
	"settings": {
		"import/resolver": {
			"alias": {
			  	"map": [
					["jet-views", "./sources/views"],
					["jet-locales", "./sources/locales"],
					["app-templates", "./sources/views/templates"],
					["app-services", "./sources/services"],
					["app-components", "./sources/views/components"]
			  	]
			}
		}
	}
}
